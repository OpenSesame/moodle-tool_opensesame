{{!
    @template tool_opensesame/opensesame_courses_table

    Example context (json):
    {
        "paginationurl" : "http://example.com",
        "pages" : ["1", "2", "3"],
        "prevpage" : "1",
        "nextpage" : "3",
        "data":
            [
                {
                    "id" : "25",
                    "title" : "Course title",
                    "oscategories" : "Parent Category |Child Category",
                    "status" : "scormimported",
                    "courseid" : "657"
                }
            ]
    }
}}
{{#adhocblocked}}
    <div class="alert alert-danger" role="alert">{{#str}} adhocblocked, tool_opensesame {{/str}}</div>
    <a class="btn btn-primary mb-2" role="button" href="?reset=1">{{#str}} resetfailtasks, tool_opensesame {{/str}}</a>
{{/adhocblocked}}
<table class="generaltable">
    <thead>
        <tr>
            <th>{{#str}} optableth:id, tool_opensesame {{/str}}</th>
            <th>{{#str}} optableth:title, tool_opensesame {{/str}}</th>
            <th>{{#str}} optableth:category, tool_opensesame {{/str}}</th>
            <th>{{#str}} optableth:course, tool_opensesame {{/str}}</th>
            <th >{{#str}} optableth:status, tool_opensesame {{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#data}}
        <tr>
            <th>{{idopensesame}}</th>
            <th>{{title}}</th>
            <th>{{oscategories}}</th>
            <th>{{#courseurl}}<a href="{{courseurl}}">{{#str}} view {{/str}} {{#str}} course {{/str}} - {{courseid}}</a>{{/courseurl}}</th>
            <th>{{status}} <i type="button" data-toggle="tooltip" data-html="true" data-placement="bottom" class="fa-solid fa-exclamation-circle text-info" title="{{statusinfo}}"></i></th>
        </tr>
    {{/data}}
    </tbody>
</table>
<nav>
    <ul class="pagination">
        {{#prevpage}}
            <li class="page-item"><a class="page-link" href="{{paginationurl}}&page={{prevpage}}">{{#str}}previous{{/str}}</a></li>
        {{/prevpage}}
        {{#pages}}
            <li class="page-item"><a class="page-link" href="{{paginationurl}}&page={{.}}">{{.}}</a></li>
        {{/pages}}
        {{#nextpage}}
            <li class="page-item"><a class="page-link" href="{{paginationurl}}&page={{nextpage}}">{{#str}}next{{/str}}</a></li>
        {{/nextpage}}
    </ul>
</nav>
